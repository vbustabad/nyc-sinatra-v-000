<h1>Update Figures</h1>
<% binding.pry %>

<form action="/figures/<%=@figure.id%>" method="POST">

  <input id="hidden" type="hidden" name="_method" value="patch"></input>

  <br></br>

  <label for="figure_name">Figure Name:</label>

  <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>"></input>

  <br></br>

  <label>New Title:</label>

  <input type="text" name="title[name]" id="new_title"></input>

  <br></br>

  <label>Update Titles:</label>

  <br></br>
  
    <% Title.all.each do |title| %>
      <%= title.name %>
      <input id="<%= title.id %>" type="checkbox" name="figure[title_ids][]" value="<%= title.name %>" <%checked if @figure.titles.include?(title)%>></input>
    <% end %>

  <br></br>

  <label>New Landmark:</label>

  <input type="text" name="landmark[name]" id="new_landmark"></input>

  <br></br>

  <label>Edit Landmarks:</label>

  <br></br>
  
    <% Landmark.all.each do |landmark| %>
      <%= landmark.name %>
      <input id="<%= landmark.id %>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%checked if @figure.landmarks.include?(landmark)%>></input>
    <% end %>

  <br></br>

  <input type="submit" value="Edit Figure"></input>

</form>
